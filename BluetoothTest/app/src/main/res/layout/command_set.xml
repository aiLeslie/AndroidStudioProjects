<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="10dp"
    android:background="@drawable/crystal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true">
    <TextView
        android:id="@+id/closeListWindow"
        android:onClick="dismiss"
        android:textColor="#262626"
        android:textSize="20dp"
        android:text="编辑操控命令"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView

        android:layout_marginTop="10dp"
        android:background="#ff5c7f"
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <EditText
        android:id="@+id/editCommandKey"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:hint="Enter Command Key"
        android:textSize="20dp" />
    <EditText
        android:layout_alignParentBottom="true"
        android:id="@+id/editCommandValue"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:hint="Enter Command Value"
        android:textSize="20dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="cancel" />
        <Button
            android:id="@+id/buttonOK"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="ok" />

    </LinearLayout>
</LinearLayout>