<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/add_background">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<com.example.jean.component.MainMenuButton
				android:padding="15dp"
				android:id="@+id/playback_video_list_back"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/back"/>
			<TextView
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:textSize="@dimen/add_title_height"
				android:textColor="@color/add_title"
				android:layout_gravity="center"
				android:gravity="center"
				android:text="@string/video_title"/>
			<com.example.jean.component.MainMenuButton
				android:padding="15dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:visibility="invisible"
				android:src="@drawable/back"/>
		</LinearLayout>
		<TextView
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@color/grey"/>
		<ListView
			android:id="@+id/playback_video_list_video"
			android:layout_width="fill_parent"
			android:layout_height="0dip"
			android:layout_weight="1.0" />
	</LinearLayout>
</RelativeLayout>