<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/add_background"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.example.jean.component.MainMenuButton
            android:padding="15dp"
            android:id="@+id/add_device_success_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"/>
        <TextView
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textSize="@dimen/add_title_height"
            android:text="@string/add_device_success_title"
            android:textColor="@color/add_title"/>
        <com.example.jean.component.MainMenuButton
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:visibility="invisible"/>
    </LinearLayout>

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/config_device"
        />

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/add_device_success_name"
        android:padding="20dp"
        android:layout_width="fill_parent"
        android:hint="@string/add_device_success_name_hint"
        android:textSize="@dimen/add_title_height"
        android:textColor="@color/add_success_text"
        android:background="@null"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/one_divider_height"
        android:background="@color/grey"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal">
    <EditText
        android:id="@+id/add_device_success_psk"
        android:padding="20dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:hint="@string/add_device_success_psk_hint"
        android:inputType="textPassword"
        android:textSize="@dimen/add_title_height"
        android:textColor="@color/add_success_text"
        android:background="@null"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/add_device_success_showpsk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="15dp"
        android:src="@drawable/psk_close"
        />
    </LinearLayout>
    <TextView
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/one_divider_height"
        android:background="@color/grey"/>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <EditText
        android:id="@+id/add_device_success_confirm_psk"
        android:padding="20dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:hint="@string/add_device_success_confirm_hint"
        android:textSize="@dimen/add_title_height"
        android:textColor="@color/add_success_text"
        android:inputType="textPassword"
        android:background="@null"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/add_device_success_showconfirmpsk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="15dp"
        android:src="@drawable/psk_close"
        />
    </LinearLayout>
    <TextView
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/one_divider_height"
        android:background="@color/grey"/>
        <Button
            android:id="@+id/add_device_success_btn"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/add_device_success"
            android:textSize="@dimen/add_title_height"
            android:textColor="@color/white"
            android:background="@drawable/add_selector"/>
    </LinearLayout>
</RelativeLayout>