<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:id="@+id/delete_admin1"
    android:background="@color/grey_background"
    >
    <TextView 
        android:id="@+id/del_title"
        android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/delete_photo_title_note"
	    android:textSize="20sp"
	    android:paddingLeft="10dp"
	    android:paddingTop="15dp"
	    android:paddingBottom="15dp"
	    android:textColor="#FFFFFF"
		android:background="@color/grey_more"
	    />
    <View
         android:layout_width="fill_parent"
         android:layout_height="2dp"
         android:background="@color/grey_more"
         />  
    <LinearLayout 
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:paddingLeft="10dp"
	    android:paddingRight="10dp"
	    >

		<TextView
		    android:id="@+id/del_note"
		    android:paddingTop="15dp"
	    	android:paddingBottom="15dp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/delete_photo_admin_note"
	    	android:textSize="20sp"
	    	android:textColor="@color/grey_more"
			/>	  
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/grey_more" />
    <LinearLayout 
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    >
	<TextView
	    android:id="@+id/del_ok_btn"
	    android:background="@drawable/selector"
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:text="OK"
	    android:textSize="20sp"
	    android:layout_weight="1"
	    android:textColor="@color/grey_more"
	    android:gravity="center_horizontal"
	    android:paddingTop="15dp"
	    android:paddingBottom="15dp"
	    />
	<View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="@color/grey_more" />
	<TextView
	    android:background="@drawable/selector"
	    android:id="@+id/del_cancel_btn"
		android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:gravity="center_horizontal"
	    android:text="Cancel"
	    android:textSize="20sp"
	    android:paddingTop="15dp"
	    android:paddingBottom="15dp"
	    android:textColor="@color/grey_more"
	    />	  
    </LinearLayout>
    <View
         android:layout_width="fill_parent"
         android:layout_height="1dp"
         android:background="@color/grey_more" />
</LinearLayout>