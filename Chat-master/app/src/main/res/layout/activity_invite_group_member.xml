<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_inviteGroupMember"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/toolbarBackground"
        app:titleTextAppearance="@style/toolbarTextAppearance">

        <Button
            android:id="@+id/btn_inviteGroupMember_invite"
            style="@style/blueButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:enabled="false"
            android:text="确定" />

    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_inviteGroupMember"
        android:background="@color/white">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_inviteGroupMember"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.czy.ui.common.LetterIndexView
            android:id="@+id/liv_inviteGroupMember_letters"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end" />

        <TextView
            android:id="@+id/tv_inviteGroupMember_hint"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:background="@drawable/text_view_hint_bg"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="45sp"
            android:visibility="gone" />

    </FrameLayout>

</RelativeLayout>
